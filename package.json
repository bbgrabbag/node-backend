{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "test": "tsc --project tsconfig.test.json && node --inspect-brk ./node_modules/jest/bin/jest.js --detectOpenHandles --runInBand",
    "tsc": "tsc",
    "watch:dev": "tsc --project tsconfig.dev.json --watch",
    "watch:test": "tsc --project tsconfig.test.json --watch",
    "eslint": "eslint",
    "dev": "concurrently \"npm run watch:dev\" \"nodemon --inspect-brk ./dev_build/index.js\"",
    "cleanup": "powershell Remove-Item  -Path ./*_build -Recurse"
  },
  "author": "Ben Turner",
  "repository": {
    "url": "https://github.com/bbgrabbag/node-boilerplate"
  },
  "license": "ISC",
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/socket.io": "^2.1.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/jest": "^25.2.2",
    "@types/socket.io-client": "^1.4.33",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4",
    "socket.io-client": "^2.3.0",
    "supertest": "^4.0.2",
    "typescript": "^3.9.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/?(*.)+(spec|test).js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "watch": [
      "dev_build/*",
      "static/*"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json"
  }
}
